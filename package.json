{
  "name": "snowplatform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=snowplatform-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name snowplatform",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "db:migrate:local": "wrangler d1 migrations apply snowplatform-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply snowplatform-production",
    "db:seed": "wrangler d1 execute snowplatform-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute snowplatform-production --local",
    "db:console:prod": "wrangler d1 execute snowplatform-production",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "azure:init": "azd init --template .",
    "azure:up": "azd up",
    "azure:deploy": "azd deploy",
    "azure:down": "azd down",
    "azure:env:new": "azd env new",
    "azure:env:list": "azd env list",
    "azure:infra": "azd infra create",
    "docker:build": "docker build -t snowplatform:latest .",
    "docker:build:azure": "docker build -t snowplatform:azure -f Dockerfile .",
    "docker:run": "docker run -p 3000:3000 --env-file .env snowplatform:latest"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.17.0",
    "@azure/identity": "^4.0.1",
    "bcrypt": "^5.1.1",
    "hono": "^4.11.4",
    "jose": "^5.2.0",
    "mssql": "^11.0.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260114.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@types/node": "^25.0.10",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.61.0"
  }
}
