# Production Azure Environment
# Replace <placeholder> with actual values from Azure Key Vault

NODE_ENV=production
ENVIRONMENT=production
LOG_LEVEL=warn

# Azure Configuration
AZURE_ENV_NAME=snowplatform-prod
AZURE_LOCATION=eastus
AZURE_SUBSCRIPTION_ID=<your-subscription-id>

# Database
DATABASE_URL=Server=tcp:<sql-server>.database.windows.net,1433;Database=snowplatformdata;Persist Security Info=False;User ID=sqladmin;Password=<from-key-vault>;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;
SQL_USER=sqladmin
SQL_PASSWORD=<from-key-vault>

# Storage
STORAGE_ACCOUNT_NAME=stnowplatformprod<random>
STORAGE_ACCOUNT_KEY=<from-key-vault>

# Security
JWT_SECRET=<from-key-vault>

# Application
PORT=3000
HOSTNAME=0.0.0.0

# Monitoring
APPLICATION_INSIGHTS_KEY=<instrumentation-key>
LOG_ANALYTICS_WORKSPACE=<workspace-name>

# Performance
NODE_OPTIONS=--max-old-space-size=1024
